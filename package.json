{
  "name": "@konveyor/extension-generator",
  "version": "0.1.0",
  "description": "CLI tool to generate new language extensions for Konveyor editor-extensions",
  "main": "dist/index.js",
  "bin": {
    "generate-extension": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "konveyor",
    "vscode",
    "extension",
    "generator",
    "cli"
  ],
  "author": "Konveyor",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/savitharaghunathan/extension-generator"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "handlebars": "^4.7.8",
    "inquirer": "^9.2.23",
    "js-yaml": "^4.1.0",
    "ora": "^8.0.1",
    "simple-git": "^3.25.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.12.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  }
}
