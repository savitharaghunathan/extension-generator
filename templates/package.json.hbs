{
  "name": "konveyor-{{language}}",
  "displayName": "Konveyor {{displayName}} Extension",
  "description": "{{displayName}} language support for Konveyor",
  "version": "0.4.0",
  "publisher": "konveyor",
  "license": "Apache-2.0",
  "main": "./out/extension.js",
  "coreExtensionId": "konveyor.konveyor",
  "icon": "resources/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/konveyor/editor-extensions"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
{{#each activation.additionalLanguageIds}}
    "onLanguage:{{this}}",
{{/each}}
    "onLanguage:{{languageId}}"{{#if activation.workspaceContains.length}},
{{#each activation.workspaceContains}}
    "workspaceContains:{{this}}"{{#unless @last}},{{/unless}}
{{/each}}
{{/if}}
  ],
  "extensionDependencies": [
    "konveyor.konveyor"{{#if dependencies.vscodeExtensions.length}},
{{#each dependencies.vscodeExtensions}}
    "{{this}}"{{#unless @last}},{{/unless}}
{{/each}}
{{/if}}
  ],
  "includedAssetPaths": {
    "{{camelCase provider.binaryName}}": "../../downloaded_assets/{{provider.binaryName}}"
  },
  "scripts": {
    "clean": "rimraf out",
    "lint": "eslint .",
    "prebuild": "npm run clean",
    "build": "webpack --mode production",
    "dev": "webpack --watch --mode development"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.12.0",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@editor-extensions/shared": "*",
    "vscode-jsonrpc": "^8.2.1",
    "winston": "^3.17.0",
    "winston-transport-vscode": "^0.1.0"
  }
}
